<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Image Comments

    <a data-toggle="collapse" href="#user_image_comments_new_form">
      Add image comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.image_comments.each do |image_comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to image_comment, image_comment %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_image_comments_new_form">
        <%= render partial: "users/user_image_comments_new_form" %>
      </div>
    </div>

  </ul>
</div>
