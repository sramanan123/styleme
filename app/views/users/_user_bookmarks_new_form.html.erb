<!-- Form bookmark start -->
<%= form_with(model: @bookmark, local: true) do |f| %>
<!-- Form bookmark end -->

  <!-- Label and input for image_id start -->
  <div class="form-group">
    <%= f.label :image_id %>

    <!-- Input for image_id start -->
    <%= f.collection_select :image_id, UploadImage.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for image_id end -->
  </div>
  <!-- Label and input for image_id end -->

  <!-- Label and input for notes start -->
  <div class="form-group">
    <%= f.label :notes %>

    <!-- Input for notes start -->
    <%= f.text_field :notes, class: "form-control" %>
    <!-- Input for notes end -->
  </div>
  <!-- Label and input for notes end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <%= f.hidden_field :user_id, value: @user.id %>
  <!-- Input for user_id end -->
  <!-- Label and input for user_id end -->

  <%= f.submit "Create bookmark", class: "btn btn-block btn-outline-secondary" %>
<% end %>
