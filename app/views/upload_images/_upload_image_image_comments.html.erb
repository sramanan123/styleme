<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Image Comments

    <a data-toggle="collapse" href="#upload_image_image_comments_new_form">
      Add image comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @upload_image.image_comments.each do |image_comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to image_comment, image_comment %>

        <% if current_user == image_comment.commentor %>
          <%= link_to image_comment, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="upload_image_image_comments_new_form">
        <%= render partial: "upload_images/upload_image_image_comments_new_form" %>
      </div>
    </div>

  </ul>
</div>
