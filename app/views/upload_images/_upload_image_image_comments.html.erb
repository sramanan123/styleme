<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Image Comments

    <a data-toggle="collapse" href="#upload_image_image_comments_new_form">
      Add image comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @upload_image.image_comments.each do |image_comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to image_comment, image_comment %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to image_comment, method: :delete, data: { confirm: "Do you really want to delete this image_comment" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="upload_image_image_comments_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
